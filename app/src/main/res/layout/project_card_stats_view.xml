<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:showIn="@layout/project_card_view"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
      android:id="@+id/project_backers_count"
      style="@style/CaptionPrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="12,000" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/stats_backers"
      style="@style/CaptionSecondary" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/grid_4"
    android:layout_marginStart="@dimen/grid_4">

    <TextView
      android:id="@+id/project_funded"
      style="@style/CaptionPrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="85%" />

    <TextView
      android:text="@string/stats_funded"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/CaptionSecondary" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      style="@style/CaptionPrimaryMedium"
      android:id="@+id/project_deadline"
      android:maxLines="1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="5" />

    <TextView
      android:id="@+id/deadline_countdown_unit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/CaptionSecondary"
      tools:text="@string/stats_days" />

  </LinearLayout>

</LinearLayout>
